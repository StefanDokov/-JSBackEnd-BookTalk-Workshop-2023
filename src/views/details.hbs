
    <section class="details-page">
        <h1>Details</h1>
        <article class="details-card">

            <article class="details-card-text">
                <h2>Title:<br>{{booking.title}}</h2>
                <h3>Author: {{booking.author}}</h3>
                <h3>Stars: {{booking.stars}}</h3>
                <h3>Genre: {{booking.genre}}</h3>
                <h3>Review: {{booking.review}}
                </h3>

                {{#if logged}}
                <div class="buttons">
                    {{#if isOwner}}
                    <a href="/edit/{{booking._id}}" class="btn-edit">Edit</a>
                    <a href="/delete/{{booking._id}}" class="btn-delete">Delete</a>
                    {{else}}
                    {{#if inList}}
                    <p class="wish-pub">You already added the book to your wish list</p>
                    {{else}}
                    <a href="/save/{{booking._id}}" class="btn-wish">Wish to read</a>
                    {{/if}}
                    {{/if}}
                </div>
                 {{/if}}
            </article>

            <article class="details-card-image">
                <img src="{{booking.imageUrl}}">
            </article>

        </article>
    </section>

